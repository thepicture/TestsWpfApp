<Page x:Class="TestsWpfApp.SerialPortPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TestsWpfApp"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="SerialPortPage"
      IsVisibleChanged="Page_IsVisibleChanged"
      Unloaded="OnUnload">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="Send COM message"
                Width="200"
                Margin="5"
                Click="OnSendComMessage" />
        <Image x:Name="VideoStream" Grid.Row="1"/>
        <ListView Name="MessagesView"
                  ItemsSource="{Binding Messages}"
                  Grid.Row="2" />
    </Grid>
</Page>
